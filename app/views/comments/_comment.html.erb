<li style="padding-left: 4%;" class="comment">
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= comment.user_name %></span>
          <%= comment.body %>
        </div>
        <div class="card-action">
          <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>
          <small><%= link_to "Delete", post_comment_path(@post.id, comment), method: :delete, class: "waves-effect waves-light btn delete-comment", remote: true, style: "float: right;" %></small>
          
        </div>
      </div>
    </div>
  </div>

  <%= form_for [comment, Comment.new], remote: true do |f| %>
    <%= f.text_area :body, placeholder: "Add a Reply" %><br/>
    <%= f.hidden_field :user_name, value: "#{comment.user_name}" %><br/>
    <%= f.submit 'Reply', :class => 'waves-effect waves-light btn' %> 
  <% end %>


  <ul>
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>

