
<div class="row">
	<div class="col s0 m3"></div>
  <div class="col s12 m6">
    <div class="card medium blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Log In</span>
        <%= form_with url: sessions_path, scope: 'login' do |form| %>
  				<%= form.email_field :email, placeholder: 'E-Mail' %>
  				<%= form.password_field :password, placeholder: 'Password' %>
					<a class="waves-effect waves-light btn"><%= form.submit "Log In" %></a>
				<% end %>
				<div class="card-action">
          <a href="#"><%= link_to "Don't have an account? Join Us!", new_user_path %></a>
        </div>
      </div>
    </div>
  </div>
</div>