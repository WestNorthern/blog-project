

<% @users.each do |user| %>

<div class="user">
	
	<p><%= user.first_name %> <%= user.last_name %> <%= user.email %></p>
	
	<%= link_to "Visit #{user.full_name}'s Profile", user, class: 'destroyer waves-effect waves-light btn center' %>

	<% if user.id == current_user.id %>

		<%= link_to "Edit", edit_user_path(user), class: 'destroyer waves-effect waves-light btn center' %>

		<%= link_to "Destroy", user, method: :delete, class: 'destroyer waves-effect waves-light btn center' %>

	<% end %>

</div>

<% end %>

